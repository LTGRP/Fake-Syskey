<Window x:Class="Message_Creator.EditorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Editor"
		Height="390"
		Width="496"
		WindowStartupLocation="CenterScreen"
		FontFamily="/syskey.Message Creator;component/Resources/#Ubuntu">
	<Grid>
		<TextBox Name="tbMessage"
				 AcceptsReturn="True"
				 HorizontalAlignment="Stretch"
				 Margin="10,31,10,73"
				 TextWrapping="Wrap"
				 VerticalAlignment="Stretch" />
		<TextBox Name="tbTitle"
				 HorizontalAlignment="Stretch"
				 Height="23"
				 Margin="40,0,10,45"
				 TextWrapping="Wrap"
				 VerticalAlignment="Bottom" />
		<Button Name="bSave"
				Content="Change"
				HorizontalAlignment="Right"
				Margin="0,0,90,10"
				VerticalAlignment="Bottom"
				Width="75"
				Click="bSave_Click" />
		<TextBlock HorizontalAlignment="Left"
				   Margin="10,10,0,0"
				   TextWrapping="Wrap"
				   Text="Message"
				   VerticalAlignment="Top" />
		<TextBlock HorizontalAlignment="Left"
				   Margin="10,0,0,49"
				   TextWrapping="Wrap"
				   Text="Title:"
				   VerticalAlignment="Bottom" />
		<Button x:Name="bCancel"
				Content="Cancel"
				HorizontalAlignment="Right"
				Margin="0,0,10,10"
				VerticalAlignment="Bottom"
				Width="75"
				Click="bCancel_Click" />
	</Grid>
</Window>
